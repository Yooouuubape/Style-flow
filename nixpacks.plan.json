{
  "providers": [
    "python"
  ],
  "buildImage": "python:3.10-slim-buster",
  "variables": {
    "NIXPACKS_PYTHON_VERSION": "3.10",
    "PORT": "5000",
    "SECRET_KEY": "admin_dashboard_secret_key",
    "PYTHONPATH": "/app",
    "PATH": "/root/.local/bin:/usr/local/bin:/usr/bin:/bin"
  },
  "phases": {
    "setup": {
      "nixPkgs": [
        "python310",
        "python310Packages.pip",
        "python310Packages.setuptools",
        "postgresql",
        "gcc"
      ],
      "cmds": [
        "mkdir -p /app",
        "apt-get update -y && apt-get install -y python3 python3-pip python3-setuptools"
      ]
    },
    "install": {
      "cmds": [
        "python3 -m pip install --upgrade pip",
        "cd admin-dashboard && python3 -m pip install -r requirements.txt"
      ]
    }
  },
  "start": {
    "cmd": "cd admin-dashboard && python3 -m gunicorn app:app"
  }
} 
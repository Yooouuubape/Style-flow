{
  "providers": [
    "python"
  ],
  "buildImage": "python:3.10-slim-buster",
  "variables": {
    "NIXPACKS_PYTHON_VERSION": "3.10",
    "PORT": "5000",
    "SECRET_KEY": "admin_dashboard_secret_key",
    "PYTHONPATH": "/app"
  },
  "phases": {
    "setup": {
      "nixPkgs": [
        "python310",
        "postgresql",
        "gcc"
      ],
      "cmds": [
        "mkdir -p /app"
      ]
    },
    "install": {
      "cmds": [
        "cd admin-dashboard && pip install -r requirements.txt"
      ]
    }
  },
  "start": {
    "cmd": "cd admin-dashboard && gunicorn app:app"
  }
} 